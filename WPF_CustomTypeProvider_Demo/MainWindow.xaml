<Window x:Class="WPF_CustomTypeProvider_Demo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_CustomTypeProvider_Demo"
        mc:Ignorable="d"
        Title="WPF ICustomTypeProvider Demo" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="26"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Margin="4">Business object that implements ICustomTypeProvider...</TextBlock>
        <DataGrid Grid.Row="1" x:Name="Data1" Margin="8" AutoGenerateColumns="true" CanUserAddRows="false" CanUserDeleteRows="false" AutoGeneratedColumns="Data1_AutoGeneratedColumns" AutoGeneratingColumn="Data1_AutoGeneratingColumn">
        </DataGrid>
        <TextBlock Grid.Row="2" Margin="4">POCO / CodexMicroORM bound...</TextBlock>
        <DataGrid Grid.Row="3" x:Name="Data2" Margin="8" AutoGenerateColumns="true" CanUserAddRows="false" CanUserDeleteRows="false" AutoGeneratedColumns="Data2_AutoGeneratedColumns" AutoGeneratingColumn="Data2_AutoGeneratingColumn">
        </DataGrid>
    </Grid>
</Window>
